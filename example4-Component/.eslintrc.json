{
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "plugins": ["react"],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ]
  },
  "rules": {
    "quotes": [2, "single"],
    "calmelCase": 2
  }
}
